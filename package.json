{
  "name": "task-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "A fullstack task and project management application with React frontend and Express/PostgreSQL backend",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "vite build",
    "build:render": "npm install && npm run build && cd server && npm install && npx prisma generate && npx prisma db push",
    "start": "cd server && npm start",
    "db:seed": "cd server && npm run db:seed",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.3.1"
  }
}
