// Prisma schema for Task Manager
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           Int            @id @default(autoincrement())
  name         String
  notes        String         @default("")
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  tasks        Task[]
  taskProjects TaskProject[]
}

model Task {
  id          Int       @id @default(autoincrement())
  name        String
  type        String    @default("Regular")
  status      String    @default("My action")
  startDate   String    @default("")  // Optional; when set, Gantt shows bar from start to due
  dueDate     String    @default("")
  notes       String    @default("")
  completedAt DateTime? // Timestamp when task was marked as Done
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  
  // Many-to-many relationship with Person (POC)
  persons      TaskPerson[]
  // Many-to-many relationship with Project (a task can belong to multiple projects)
  taskProjects TaskProject[]
}

model Person {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String?  // Optional color, default is colorless
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Many-to-many relationship with Task
  tasks     TaskPerson[]
}

// Join table for Task-Person many-to-many relationship
model TaskPerson {
  id        Int      @id @default(autoincrement())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    Int
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  personId  Int
  createdAt DateTime @default(now())
  
  @@unique([taskId, personId])
}

// Join table for Task-Project many-to-many relationship
model TaskProject {
  id        Int      @id @default(autoincrement())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    Int
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
  createdAt DateTime @default(now())

  @@unique([taskId, projectId])
}

model TaskType {
  id    Int    @id @default(autoincrement())
  name  String @unique
  color String
  order Int    @default(0)
}

model TaskStatus {
  id    Int    @id @default(autoincrement())
  name  String @unique
  color String
  order Int    @default(0)
}
